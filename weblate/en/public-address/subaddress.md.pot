#: ../docs/en/public-address/subaddress.md:87
#, markdown-text, no-wrap
msgid "Public spend key"
msgstr ""

#. type: Plain text
#: ../docs/en/public-address/subaddress.md:90
#, markdown-text
msgid "The subaddress public spend key `D` is derived as follows:"
msgstr ""

#. type: Plain text
#: ../docs/en/public-address/subaddress.md:92
#, markdown-text, no-wrap
msgid "    D = B + m*G\n"
msgstr ""

#. type: Bullet: '* '
#: ../docs/en/public-address/subaddress.md:98
#, markdown-text
msgid "`B` is standard address public spend key"
msgstr ""

#. type: Bullet: '* '
#: ../docs/en/public-address/subaddress.md:98
#, markdown-text
msgid "`m` is a per-subaddress scalar that is derived from the private spend key"
msgstr ""

#. type: Bullet: '* '
#: ../docs/en/public-address/subaddress.md:98
#, markdown-text
msgid "`G` is the \"base point\"; this is simply a constant specific to [edwards25519](/cryptography/asymmetric/edwards25519)"
msgstr ""

#. type: Title ###
#: ../docs/en/public-address/subaddress.md:99
#, markdown-text, no-wrap
msgid "Public view key"
msgstr ""

#. type: Plain text
#: ../docs/en/public-address/subaddress.md:102
#, markdown-text
msgid "The subaddress public view key `C` is derived as follows:"
msgstr ""

#. type: Plain text
#: ../docs/en/public-address/subaddress.md:104
#, markdown-text, no-wrap
msgid "    C = a*D\n"
msgstr ""

#. type: Bullet: '* '
#: ../docs/en/public-address/subaddress.md:109
#, markdown-text
msgid "`a` is a private view key of the standard address"
msgstr ""

#. type: Bullet: '* '
#: ../docs/en/public-address/subaddress.md:109
#, markdown-text
msgid "`D` is a public spend key of the subaddress"
msgstr ""

